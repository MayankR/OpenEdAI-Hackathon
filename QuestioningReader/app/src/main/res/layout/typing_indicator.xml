<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:clickable="false">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="-10dp"
        android:background="@drawable/left_chat_message_pointer"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bot_chat_message_container"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/typing_dot_10"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:id="@+id/typing_dot_11"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="-2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/typing_dot_20"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:id="@+id/typing_dot_21"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="-2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/typing_dot_30"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="0dp"/>
            <ImageView
                android:id="@+id/typing_dot_31"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/typing_indicator_dot"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginTop="-2dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
